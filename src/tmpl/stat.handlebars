<div id="todo-stats">
    <span class="todo-count">
      {{number}}
        {{word}} left.
    </span>
    <span class="todo-clear">
      <a href="#" class="remove-items">
          Clear {{numberDone}}
          completed {{wordDone}}
      </a>
    </span>
</div>

<span id="todo-count"><strong>{{remaining}}</strong>{{#if completed}}{{else}}checked{{/if}} <%= remaining == 1 ? 'item' : 'items' %> left</span>
<ul id="filters">
    <li>
        <a class="selected" href="#/">All</a>
    </li>
    <li>
        <a href="#/active">Active</a>
    </li>
    <li>
        <a href="#/completed">Completed</a>
    </li>
</ul>
<% if ( completed ) { %>
<button id="clear-completed">Clear completed (<%= completed %>)</button>
<% } %>